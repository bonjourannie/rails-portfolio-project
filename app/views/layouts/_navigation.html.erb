<nav class="navbar" id="navbar">
    <li><%= link_to 'Home', projects_path, class: "nav-link"%></li>
    <% if current_user %>
        <li class="nav-item active"><%= link_to current_user.email, user_path(current_user), class: "nav-link" %></li>
        <li><%= link_to "Log Out", logout_path, class: "nav-link" %></li>

    <% else %>
        <li><%= link_to "Sign Up", signup_path, class: "nav-link" %></li>
        <li><%= link_to "Log In", login_path, class: "nav-link" %></li>
    <% end %>

    <%= form_tag(projects_path, :method => 'get', id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search by material", class: "form-control mr-sm-2" %>
        <%= submit_tag "Search", :name => nil, class: "btn btn-secondary my-2 my-sm-0" %>
    <% end %>
    <br>
   
 
</nav>