<%= form_for @project do |f| %>
    
  <div class="field">
      <%= f.label "Categories" %> <br>
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Pick a Category" %> 
  </div><br>
  
  <div class="field">
      <%= f.label :name %> 
      <%= f.text_field :name, placeholder: "Enter a Project" %>
  </div>
  
  <fieldset>
      <legend><strong>Materials</strong></legend>
          <%= f.fields_for :project_materials do |projmat_builder| %>
              <%= projmat_builder.hidden_field :project_id, value: project.id %>
              
          <%= ri_builder.fields_for :material do |material_builder| %> 
                  <div class="field">
                      <%= material_builder.text_field :name, placeholder: "Material Name" %>
                  </div>
              <% end %>
              
          <% end %>
   </fieldset>    
      
  <div class="field">
      <%= f.label :instructions %> <br>
      <%= f.text_area :instructions, cols: "50", rows: "5" %>
  </div>      
  
  <%= f.submit %>
<% end %>